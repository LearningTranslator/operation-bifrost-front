---
import ComingSoon from "../components/ComingSoon.svelte";
import "@fontsource/iosevka-etoile";
import "../styles/global.css";

import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Operation Bifrost | ปฏิบัติการไบฟรอส - โปรเจกต์แปล Steins;Gate ภาษาไทย
    </title>

    <!-- Primary Meta Tags -->
    <meta
      name="title"
      content="Operation Bifrost | ปฏิบัติการไบฟรอส - โปรเจกต์แปล Steins;Gate ภาษาไทย"
    />
    <meta
      name="description"
      content="โครงการแปลเกมวิชวลโนเวล Steins;Gate เป็นภาษาไทย ทลายกำแพงภาษาสำหรับแฟนๆ ชาวไทยของซีรีส์ Science Adventure ติดตามความคืบหน้าการแปลแบบเรียลไทม์ได้ที่นี่"
    />
    <meta
      name="keywords"
      content="Steins;Gate, การแปลภาษาไทย, fan translation, visual novel, Operation Bifrost, ปฏิบัติการไบฟรอส, Science Adventure, localization, สไตนส์เกต"
    />
    <meta name="author" content="Operation Bifrost Team" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://operationbifrost.com/" />
    <meta
      property="og:title"
      content="Operation Bifrost | ปฏิบัติการไบฟรอส - โปรเจกต์แปล Steins;Gate ภาษาไทย"
    />
    <meta
      property="og:description"
      content="โครงการแปลเกมวิชวลโนเวล Steins;Gate เป็นภาษาไทย ติดตามความคืบหน้าการแปลแบบเรียลไทม์และเข้าร่วมชุมชนของเราได้ที่นี่"
    />
    <meta property="og:image" content="/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://operationbifrost.com/" />
    <meta
      property="twitter:title"
      content="ปฏิบัติการไบฟรอส | Operation Bifrost"
    />
    <meta
      property="twitter:description"
      content="โครงการแปลเกมวิชวลโนเวล Steins;Gate เป็นภาษาไทย ติดตามความคืบหน้าการแปลแบบเรียลไทม์ได้ที่นี่"
    />
    <meta property="twitter:image" content="/og-image.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://operationbifrost.com/" />
  </head>

  <body>
    <ComingSoon client:load />
    <Analytics />
    <SpeedInsights />
  </body>
</html>
